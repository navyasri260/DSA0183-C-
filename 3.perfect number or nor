#include<iostream>
int main(){
    int number,i,sum=0;
    std::cout<<"enter a number:";
    std::cin>>number;
    for(i=1;i<=number/2;++i){
        if(number%i==0){
            sum=sum+i;
        }
    }
    if(sum==number){
        std::cout<<number<<"is a perfect number."<<std::endl;
    }
    else{
        std::cout<<number<<"is not a perfect number." <<std::endl;
    }
    return 0;
}
